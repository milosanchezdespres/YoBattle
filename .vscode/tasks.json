{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build YoBattle",
      "type": "shell",
      "command": "g++",
      "args": [
      "-std=c++20",
        "main.cpp",
        "-o",
        "build/YoBattle",
        "-lraylib", "-lGL", "-lm", "-lpthread", "-ldl", "-lrt", "-lX11"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Run YoBattle",
      "type": "shell",
      "command": "${workspaceFolder}/build/YoBattle",
      "dependsOn": "Build YoBattle",
      "problemMatcher": []
    }
  ]
}